@model ResumenEmpleados

@{

    List<string> oficios = ViewData["OFICIOS"] as List<string>;

}

<h1> Lambda Empleados Oficios</h1>

<form method="post">
     <label> Introduzca un oficio</label>
     <select name="oficio"> 
        @foreach(string oficio in oficios)
        {
            <option value ="@oficio"> @oficio </option>
        }
    </select>
     <button class="btn btn-dark"> Mostrar Resumen </button>
</form>
<br />

@if(Model != null)

{
    <ul class="list-group">
        <li class="list-group-item">
            Personas : @Model.Personas
        </li>

        <li class="list-group-item">
            Maximo Salario : @Model.MaximoSalario
        </li>

        <li class="list-group-item">
            Media Salarial : @Model.MediaSalarial
        </li>

    </ul>
    <br />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model.Empleados)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>


}